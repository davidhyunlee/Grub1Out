<div id="index-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#index-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#index-carousel" data-slide-to="1"></li>
    <li data-target="#index-carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div style="background-size: cover; background-position: center; background-image: url(<%= asset_path "slide1.jpg" %>); height: 400px;"></div>
      <div class="carousel-caption">
        Oh my god! Look at them fries!
      </div>
    </div>
    <div class="item">
      <div style="background-size: cover; background-position: center; background-image: url(<%= asset_path "slide2.jpg" %>); height: 400px;"></div>
      <div class="carousel-caption">
        That pizza doe! Look at that pizza!
      </div>
    </div>
    <div class="item">
      <div style="background-size: cover; background-position: center; background-image: url(<%= asset_path "slide3.jpg" %>); height: 400px;"></div>
      <div class="carousel-caption">
        That burger is cray!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#index-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#index-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <!-- Search Area -->
<div class="row" style="background: #BEBDB8; height: 80px;">
  <div class="container" style="text-align: center;">
    <%= form_tag businesses_path, method: 'get', class: 'form-inline searchform' do %>
      <div class="form-group">
        <label></label>
        <%= text_field_tag :query, nil, placeholder: 'You hungry!?', class: 'search_field' %>
      </div>
      <div class="form-group">
        <label></label>
        <%= select_tag "filter", "<option value='by_name'>Restaurant Name</option><option value='by_item'>Menu Item</option>".html_safe, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= submit_tag "Grub One Out!", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="container">
    <center><h2 class="wow zoomInRight">That Food Doe!</h2></center>
    <% @items.take(12).each do |item| %>
    <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
      <center>
      <div class="polaroid">
        <%= link_to image_tag(item.menu_item_photos.first.photo.url, class: 'menu_image wow zoomInDown'), business_menu_path(item.menu_item_category.menu.business, item.menu_item_category.menu) if item.menu_item_photos.first %>
        <%= link_to image_tag('image_unavailable.png', class: 'menu_image wow zoomInDown'), business_menu_path(item.menu_item_category.menu.business, item.menu_item_category.menu) if !item.menu_item_photos.first %>
      <p class="wow fadeInLeft"><%= item.name %></p>
      </div>
      </center>
    </div>
    <% end %>
  </div>
</div>